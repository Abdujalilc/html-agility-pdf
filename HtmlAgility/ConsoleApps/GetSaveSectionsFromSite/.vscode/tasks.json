{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet build",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "dotnet run -- mvc",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		},
		{
			"label": "watch mvc",
			"type": "shell",
			"command": "dotnet watch run --  mvc",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		},
		{
			"label": "run-mssql",
			"type": "shell",
			"command": "dotnet run -- --mssql",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		}
	]
}